	<!-- 自动扫描controller包下的所有类，使其认为spring mvc的控制器 -->
	<context:component-scan base-package="com.lrh.controller"
		use-default-filters="false">
		<context:include-filter type="annotation"
			expression="org.springframework.stereotype.Controller" />
		<context:include-filter type="annotation"
			expression="org.springframework.stereotype.Component" />
	</context:component-scan>
	<aop:aspectj-autoproxy />
	<annotation-driven />

	<context:annotation-config />
	
	<!-- 登录验证拦截器,有些请求需要登录后才能操作 -->
	<interceptors>
		<interceptor>
			<!-- 拦截所有请求 -->
			<mapping path="/spitslot/**"/>
			<mapping path="/blog/**"/>
			<!-- 不被拦截的请求 -->
			<exclude-mapping path="/**/praise"/>
        	<exclude-mapping path="/LRH"/>
        	<exclude-mapping path="/resources/**"/>
        	<exclude-mapping path="/user/login"/>
        	<exclude-mapping path="/user/regist"/>
        	<exclude-mapping path="/user/checkAccount"/>
        	<exclude-mapping path="/user/forgotPwd"/>
			<beans:bean class="com.lrh.interceptor.LoginInterceptor" />
   		</interceptor> 
	</interceptors>
	
